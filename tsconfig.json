{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2023",
      "DOM"
    ],
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "target": "ESNext",
    "esModuleInterop": true
  },
  // These may be different for your repo:
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}